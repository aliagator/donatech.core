@model Donatech.Core.ViewModels.LoginViewModel
@{
    Layout = "_Layout";
}


<form asp-action="Login">
    <div class="text-center">
        <div class="container text-center mb-4">
            <div class="donatech-login">

                <div class="col" style="text-align:center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <img class="mb-4" src="img/donatech.png" alt="" width="72" height="72">

                <p class="h4 mb-4">Donatech - Login</p>

                @Html.TextBoxFor(l => l.Email, htmlAttributes: new { _class = "form-control mb-4", placeholder = "Email" })

                @Html.TextBoxFor(l => l.Password, htmlAttributes: new { _class = "form-control mb-4", placeholder = "Password" })                

                <button type="submit" id="btnLogin" class="btn btn-info btn-block my-4">Iniciar Sesi&oacute;n</button>

                <div class="row">
                    <div class="col">
                        @Html.ActionLink("Olvido su contraseña?", "ForgotPassword")                       
                    </div>
                </div>
                <br />
                <div>
                    <div class="col">
                        @Html.ActionLink("Registrarse", "CreateAccount")                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>